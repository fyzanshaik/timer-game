{
  "name": "timer-game-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "cd packages/db && pnpm db:generate",
    "db:migrate:local": "cd apps/api && wrangler d1 migrations apply timer-game-db --local",
    "db:migrate:remote": "cd apps/api && wrangler d1 migrations apply timer-game-db --remote",
    "deploy:api": "cd apps/api && pnpm deploy",
    "deploy:web": "cd apps/web && pnpm build && wrangler pages deploy dist --project-name=timer-game",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/node": "^22.7.5",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.7.0"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20"
  }
}
